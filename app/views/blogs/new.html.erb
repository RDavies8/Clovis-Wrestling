<% content_for :title do %>
    Blog - New
<% end %>

<div class = "container">
    <div class = "row row-offcanvas row-offcanvas-right">
        <p class="pull-right visible-xs">
            <button type="button" class="btn btn-info btn-xs" data-toggle="offcanvas">Twitter</button>
        </p>
        <div class = "col-xs-12 col-sm-9">
            <div class="row">
                <div class = "col-sm-12">
                    <div class = "panel panel-default">
                        <div class = "panel-body">
                            <div class = "page-header">
                                <h3 id="article-title">
                                    New Blog
                                </h3>
                            </div>


                            <%= form_for @blog, html: {class: "form-horizontal"} do |form| %>
                                <div class="form-group">
                                    <%= label_tag :text_val, "Title:", class: "col-sm-2 control-label" %>
                                    <div class="col-sm-10">
                                        <%= form.text_field :title, class: "form-control" %>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <%= label_tag :text_val, "Author:", class: "col-sm-2 control-label" %>
                                    <div class="col-sm-10">
                                        <%= form.text_field :author, class: "form-control" %>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <%= label_tag :text_val, "Post:", class: "col-sm-2 control-label" %>
                                    <div class="col-sm-10">
                                        <%= form.text_area :article, class: "form-control", rows: "10" %>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <%= label_tag :text_val, "Image:", class: "col-sm-2 control-label" %>
                                    <div class="col-sm-10">
                                        <%= form.file_field :image, class: "form-control", rows: "10" %>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="col-sm-offset-2 col-sm-10">
                                        <%= form.button 'Submit', :class => "btn btn-primary btn-lg btn-block" %>
                                    </div>
                                </div>
                            <% end %>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <%= render "shared/social_sidebar" %>

    </div>
</div>