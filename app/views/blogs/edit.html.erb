<% content_for :title do %>
    Blog - New
<% end %>

<div class = "container">

  <%= render 'shared/form_error', var: @blog %>

  <div class = "row">
    <div class = "col-xs-12 col-md-10 col-md-offset-1 col-lg-8 col-lg-offset-2">
      <div class="row">
        <div class = "col-sm-12">
          <div class = "panel panel-default">
            <div class = "panel-heading">
              <h3 class="text-center">Edit <%= @blog.title %></h3>
            </div>


            <div class = "panel-body">
              <%= form_for @blog, html: {class: 'form-horizontal'} do |form| %>
                  <div class="form-group">
                    <%= label_tag :text_val, 'Title:', class: 'col-sm-2 control-label' %>
                    <div class="col-sm-10">
                      <%= form.text_field :title, class: 'form-control' %>
                    </div>
                  </div>

                  <div class="form-group">
                    <%= label_tag :text_val, 'Author:', class: 'col-sm-2 control-label' %>
                    <div class="col-sm-10">
                      <%= form.select :author, Coach.all.collect {|c| [c.name, c.id]}, {include_blank: 'Clovis Wrestling'}, {class: 'form-control'} %>
                    </div>
                  </div>

                  <div class="form-group">
                    <%= label_tag :text_val, 'Post:', class: 'col-sm-2 control-label' %>
                    <div class="col-sm-10">
                      <%= form.text_area :article, class: 'form-control', rows: '10' %>
                    </div>
                  </div>

                  <div class="form-group">
                    <%= label_tag :text_val, 'Image:', class: 'col-sm-2 control-label' %>
                    <div class="col-sm-10">
                      <!--<%= form.file_field :image, class: 'form-control', rows: '10' %>-->
                    </div>
                  </div>

                  <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                      <%= form.button 'Submit', :class => 'btn btn-primary btn-lg btn-block' %>
                    </div>
                  </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>