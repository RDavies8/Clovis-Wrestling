<% content_for :title do %>
    <%= @coach.name %>
<% end %>

<div class = "container">
    <div class = "row row-offcanvas row-offcanvas-right">
        <div class = "col-xs-12 col-sm-9">
            <div class="row">
                <div class = "col-sm-12">
                    <div class = "panel panel-default">
                        <div class = "panel-body">
                            <div class = "page-header">
                                <h3 id="article-title">
                                	<%= @coach.name %>
                                	<small><%= @coach.position %></small>
                                </h3>
                            </div>

                            <!--Check featuredImg/articleImg-->
                            <%= image_tag @coach.image_id, class: 'featuredImg img-article' %>

                            <p id = "main-text">
                            	<%= @coach.info %>
                            </p>

                        </div>
                    </div>
                </div>
            </div>
        </div>

        <%= render 'shared/related_sidebar', items: @coaches, title: 'name', subtitle: 'position',
                                             controller_path: 'coach', path: 'ref' %>

    </div>

    <% if @posts.any? %>
        <div class="row">
            <div class="col-xs-12 col-sm-9">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="text-center">Posts by <%= @coach.name %></h3>
                    </div>
                    <div class="panel-body">
                        <% @posts.each do |post| %>
                            <%= link_to blog_path(post.id) do %>
                                <div class="panel panel-default">
                                    <div class="panel-body" style="color: BLACK">
                                        <%= image_tag post.image_id, class: 'thumbnail sm col-xs-4' %>
                                        <div class="col-xs-8">
                                            <div class="row">
                                                <div class="col-xs-8"><%= post.title %></div>
                                                <div class="text-center col-xs-4"><%= post.created_at.strftime('%b %d') %> </div>
                                            </div>
                                            <br />
                                            <div class="row">
                                                <div class="col-xs-12">
                                                <%= post.preview %>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            <% end %>
                        <% end %>
                    </div>
                </div>
            </div>
        </div>
    <% end %>
</div>
