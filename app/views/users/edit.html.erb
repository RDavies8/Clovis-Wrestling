<% content_for :title do %>
    <%= @user.full_name %>
<% end %>


<div class='container'>
    <%= render 'shared/form_error', var: @user %>

    <div class='row'>
        <div class="col-md-offset-1 col-md-10 col-lg-8 col-lg-offset-2">
            <div class="panel panel-default">
                <div class="panel-heading">
                  <h3 class="text-center">Edit Profile</h3>
                </div>
                <div class="panel-body">
                    <%= form_for @user, html: {class: 'form-horizontal'} do |form| %>
                        <div class='form-group'>
                            <%= label_tag :text_val, 'Username:', class: 'col-sm-2 control-label' %>
                            <div class="col-sm-10">
                                <%= form.text_field :username, class: 'form-control', disabled: true %>
                            </div>
                        </div>
                        <div class='form-group'>
                            <%= label_tag :text_val, 'New Password:', class: 'col-sm-2 control-label' %>
                            <div class="col-sm-10">
                                <%= form.password_field :password, class: 'form-control' %>
                            </div>
                        </div>
                        <div class='form-group'>
                            <%= label_tag :text_val, 'New Password Confirmation:', class: 'col-sm-2 control-label' %>
                            <div class="col-sm-10">
                                <%= form.password_field :password_confirmation, class: 'form-control' %>
                            </div>
                        </div>
                        <div class='form-group'>
                          <%= label_tag :text_val, 'Email:', class: 'col-sm-2 control-label' %>
                          <div class="col-sm-10">
                              <%= form.text_field :email, class: 'form-control', disabled: true %>
                          </div>
                        </div>
                        <div class='form-group'>
                            <%= label_tag :text_val, 'First Name:', class: 'col-sm-2 control-label' %>
                            <div class="col-sm-10">
                                <%= form.text_field :first_name, class: 'form-control' %>
                            </div>
                        </div>
                        <div class="form-group">
                            <%= label_tag :text_val, 'Last Name', class: 'col-sm-2 control-label' %>
                            <div class="col-sm-10">
                                <%= form.text_field :last_name, class: 'form-control' %>
                            </div>
                        </div>
                        <div class="form-group">
                            <%= label_tag :text_val, 'City:', class: 'col-sm-2 control-label' %>
                            <div class="col-sm-10">
                                <%= form.text_field :city, class: 'form-control' %>
                            </div>
                        </div>
                        <div class="form-group">
                            <%= label_tag :text_val, 'State:', class: 'col-sm-2 control-label' %>
                            <div class="col-sm-10">
                                <!-- TODO Make Current State Appear on Select -->
                                <%= form.select :state, options_for_select(us_states),  {include_blank: 'Select State'}, {class: 'form-control'} %>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="checkbox col-sm-offset-2 col-sm-10">
                                <label>
                                    Receive Updates/Events via Email <%= form.check_box :subscription %>
                                </label>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-offset-2 col-sm-5 col-xs-6">
                                <%= form.submit 'Update', class: 'btn btn-primary btn-lg btn-block' %>
                            </div>
                            <div class="col-sm-5 col-xs-6">
                                <%= link_to 'Delete', {action: 'destroy', id: @user.id}, method: :delete, class: 'btn btn-danger btn-lg btn-block', data: {confirm: 'Are you sure you want to delete this Profile?'} %>
                            </div>
                        </div>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</div>