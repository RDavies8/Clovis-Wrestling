<% content_for :title do %>
    User - New
<% end %>

<div class='container'>
    <div class='row'>
        <div class="col-md-offset-2 col-md-8">
            <div class="panel panel-default">
                <div class="panel-heading">
                  <h3>New User</h3>
                </div>
                <div class="panel-body">
                    <%= form_for @new_user, html: {class: 'form-horizontal'} do |form| %>
                        <div class='form-group'>
                          <%= label_tag :text_val, 'Email:', class: 'col-sm-2 control-label' %>
                          <div class="col-sm-10">
                              <%= form.text_field :email, class: 'form-control' %>
                          </div>
                        </div>
                        <div class='form-group'>
                            <%= label_tag :text_val, 'First Name:', class: 'col-sm-2 control-label' %>
                            <div class="col-sm-10">
                                <%= form.text_field :first_name, class: 'form-control' %>
                            </div>
                        </div>
                        <div class="form-group">
                            <%= label_tag :text_val, 'Last Name', class: 'col-sm-2 control-label' %>
                            <div class="col-sm-10">
                                <%= form.text_field :last_name, class: 'form-control' %>
                            </div>
                        </div>
                        <div class="form-group">
                            <%= label_tag :text_val, 'City:', class: 'col-sm-2 control-label' %>
                            <div class="col-sm-10">
                                <%= form.text_field :city, class: 'form-control' %>
                            </div>
                        </div>
                        <div class="form-group">
                            <%= label_tag :text_val, 'State:', class: 'col-sm-2 control-label' %>
                            <div class="col-sm-10">
                                <%= form.text_field :state, class: 'form-control' %>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-offset-2 col-sm-10">
                                <%= form.submit 'Sign Up', class: 'btn btn-primary btn-lg btn-block' %>
                            </div>
                        </div>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</div>