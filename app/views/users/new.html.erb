<% content_for :title do %>
    User - New
<% end %>


<div class='container'>

    <%= render 'shared/form_error', var: @new_user %>

    <div class='row'>
        <div class="col-md-offset-1 col-md-10 col-lg-8 col-lg-offset-2">
            <div class="panel panel-default">
                <div class="panel-heading">
                  <h3 class="text-center">New User</h3>
                </div>
                <div class="panel-body">
                    <%= form_for @new_user, html: {class: 'form-horizontal'} do |form| %>
                        <div class='form-group'>
                            <%= label_tag :text_val, 'Username:', class: 'col-sm-2 control-label' %>
                            <div class="col-sm-10">
                                <%= form.text_field :username, class: 'form-control' %>
                            </div>
                        </div>
                        <div class='form-group'>
                            <%= label_tag :text_val, 'Password:', class: 'col-sm-2 control-label' %>
                            <div class="col-sm-10">
                                <%= form.password_field :password, class: 'form-control' %>
                            </div>
                        </div>
                        <div class='form-group'>
                            <%= label_tag :text_val, 'Password Confirmation:', class: 'col-sm-2 control-label' %>
                            <div class="col-sm-10">
                                <%= form.password_field :password_confirmation, class: 'form-control' %>
                            </div>
                        </div>
                        <br />
                        <div class='form-group'>
                          <%= label_tag :text_val, 'Email:', class: 'col-sm-2 control-label' %>
                          <div class="col-sm-10">
                              <%= form.text_field :email, class: 'form-control' %>
                          </div>
                        </div>
                        <div class='form-group'>
                            <%= label_tag :text_val, 'First Name:', class: 'col-sm-2 control-label' %>
                            <div class="col-sm-10">
                                <%= form.text_field :first_name, class: 'form-control' %>
                            </div>
                        </div>
                        <div class="form-group">
                            <%= label_tag :text_val, 'Last Name', class: 'col-sm-2 control-label' %>
                            <div class="col-sm-10">
                                <%= form.text_field :last_name, class: 'form-control' %>
                            </div>
                        </div>
                        <div class="form-group">
                            <%= label_tag :text_val, 'City:', class: 'col-sm-2 control-label' %>
                            <div class="col-sm-10">
                                <%= form.text_field :city, class: 'form-control' %>
                            </div>
                        </div>
                        <div class="form-group">
                            <%= label_tag :text_val, 'State:', class: 'col-sm-2 control-label' %>
                            <div class="col-sm-10">
                                <%= form.select :state, options_for_select(us_states),  {include_blank: 'Select State'}, {class: 'form-control'} %>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="checkbox col-sm-offset-2 col-sm-10">
                                <label>
                                    Receive Updates/Events via Email <%= form.check_box :subscription %>
                                </label>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-offset-2 col-sm-10">
                                <%= form.submit 'Sign Up', class: 'btn btn-primary btn-lg btn-block' %>
                            </div>
                        </div>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</div>

