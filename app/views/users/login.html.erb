<% if session[:user] %>

<% else  %>
    <div class="container">
        <div class="col-md-offset-2 col-md-8">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="text-center">User Login</h3>
                </div>
                <div class="panel-body">
                    <%= form_tag '/users/post_login', class: 'form-horizontal' do %>
                        <div class="form-group">
                          <%= label_tag :text_val, 'Email:', class: 'col-sm-2 control-label' %>
                          <div class="col-sm-10">
                              <%= text_field_tag :email, '',  placeholder: 'Email', class: 'form-control' %>
                          </div>
                        </div>
                        <div class="form-group">
                          <%= label_tag :text_val, 'Password:', class: 'col-sm-2 control-label' %>
                          <div class="col-sm-10">
                              <%= password_field_tag :password, '',  placeholder: 'Password', class: 'form-control' %>
                          </div>
                        </div>
                        <div class="form-group">
                          <div class="col-sm-offset-2 col-sm-5 col-xs-6">
                              <%= submit_tag 'Login', class: 'btn btn-default btn-lg btn-block' %>
                          </div>
                          <div class="col-sm-5 col-xs-6">
                            <%= link_to 'Sign Up', new_user_path, class: 'btn btn-primary btn-lg btn-block' %>
                          </div>
                        </div>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
<% end %>
